.message
  .upper-message
    .upper-message__user-name
      = message.user.name
    .upper-message__date
      = message.created_at.to_s(:datetime)
  .lower-message
    .lower-message__content
      = message.content if message.content.present?
    .lower-message__image
      = image_tag message.image.url if message.image.present?
